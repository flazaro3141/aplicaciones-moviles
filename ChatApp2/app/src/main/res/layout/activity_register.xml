<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="16dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar" style="@style/AppToolbar"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:title="Register"/>

    <EditText
        android:id="@+id/etName" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="Your name"/>

    <Button
        android:id="@+id/btnSave" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="Save"
        style="@style/Widget.MaterialComponents.Button"
        android:backgroundTint="@color/orange_primary"
        android:textColor="@color/white" android:layout_marginTop="16dp"/>
</LinearLayout>