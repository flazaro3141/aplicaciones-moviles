    <TextView
        android:id="@+id/tvChatName" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="18sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvParticipants" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="14sp"
        android:textColor="@color/black"/>
</LinearLayout>